<div class="center">
	<h2><%= @job.position %> <br><small>at</small><br><%= @job.company.name%></h2><br>
</div>

<div class="row">
	<div class="col s8">
		<p class="flow-text center"><strong>Position Details</strong></p><p class="flow-text" id="text-indent"><small><%= @job.description %></small></p><br>
	</div>
	<div class="col s4">
		<p>Position<br><small><%= @job.position %></small></p><br>

		<!-- What does this if statement do -->
		<% if @job.company%>
			<p>Company<br> <small><%= @job.company.name %></small></p><br>
		<% end %>
		<!-- if statement ends here -->
			
		<p>Location<br> <small><%= @job.location %></small></p><br>
	</div>
</div>

<h4>
	<%= "This listing has been viewed: #{@job.impressionist_count} times" %>
</h4>

<% if @user_favorite %>
	<button class="btn"><%= link_to "Unfavorite", favorite_path(@user_favorite), method: :delete %></button>
<% else %>
	<%= render 'favorites/form' %>
<% end %> 

<br>
<br>
<br>

<% if current_user.company_id == @job.company_id %>
	<p><h4>Job Post Admin (HR)</h4></p>
	<button><%= link_to "Update this Listing", edit_job_path(@job) %></button>
	<button><%= link_to "Delete this Listing", job_path(@job), method: :delete %></button>
<% end %>

<br>
<br>


