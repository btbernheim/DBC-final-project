<%= simple_form_for @job do |f| %>
  <%= f.input :position, label: 'Position Title', error: 'Position is a required field' %>
  <%= f.input :location, error: 'Location is a required field' %>
  <%= f.input :description, label: 'Position Description', error: 'Description is a required field'   %>
  <%= f.input :compensation, label: 'Compensation' %>
  <%= f.input :job_type, label: 'Listing Type', collection: ["full_time", "part-type", "internship", "freelance"] %>
  <%= f.button :submit %>
<% end %>