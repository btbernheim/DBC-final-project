<h1>Register</h1>
<br>
<br>
<div class="row container">
	<%= form_for @user, :html => { multipart: true, :class => "col s12"} do |f| %>
	<span class="form_header">

		<div class="input-field col s6">
			<div class"row">
				<%= f.label :first_name%>
				<%= f.text_field :first_name , class: "input-field col s6"%>
			</div>
		</div>

		<div class="input-field col s6">
			<div class"row">
				<%= f.label :last_name %>
				<%= f.text_field :last_name,  class: "input-field col s6" %>
			</div>
		</div>

		<div class="input-field col s6">
			<div class"row">
				<%= f.label :email %>
				<%= f.email_field :email, class: "input-field col s6" %>
			</div>
		</div>

		<div class="input-field col s6">
			<div class"row">
				<%= f.label :password %>
				<%= f.password_field :password, class: "input-field col s6" %>
			</div>
		</div>

		<div class="input-field col s6">
			<div class="row">
				<label>Unique Token</label>
				<%= f.text_field :unique_token, class: "input-field col s6" %>
			</div>
		</div>

		<div class="input-field col s6">
			<div class="row">
				<label>Photo</label>
				<%= f.file_field :photo, class: "input-field col s6" %>
			</div>
		</div>

		<center>
			<div class=" ">
				<%= submit_tag "Register", :class => "btn"  %>
			</div>
			<br>
			<br>
		</center>

		<% end %>
	</span>
</div>
</div>
</div>
<br>
<br>
