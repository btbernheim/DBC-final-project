<div class="container col-md-8 col-lg-8">
	<h1>Register</h1>


<%= form_for @user, :html => { multipart: true, :class => "form-signin"} do |f| %>
	<div>
		<%= f.label :first_name %>
		<%= f.text_field :first_name , class: "form-control"%>
	</div>

	<div>
		<%= f.label :last_name %>
		<%= f.text_field :last_name,  class: "form-control" %>
	</div>

	<div>
		<label>Company (if applicable)</label>
		<select name="user[company_id]"> 
			<option value=nil>N/A</option>>
			<% @companies.each do |company| %>
				<option value=<%=company.id%>><%=company.name%></option>
			<%end%>
		</select>

	</div>

	<div>
		<%= f.label :email %>
		<%= f.text_field :email, class: "form-control" %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.password_field :password, class: "form-control" %>
	</div>

	<div>
		<label>Unique Token</label>
		<%= f.text_field :unique_token, class: "form-control" %>
	</div>
	
	<div>
		<label>Photo</label>
		<%= f.file_field :photo, class: "form-control" %>
	</div>

	<%= submit_tag "Register", :class => "btn btn-lg btn-primary"  %>

<% end %>
</div>




