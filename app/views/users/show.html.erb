<div class="text-center">	
	<h3><%= @user.full_name %>'s Profile</h3>

	<!-- <br> -->
	<!-- <br> -->

	<strong>Contact:</strong>
	<%= @user.email %>
</div>	

<br>
<br>

<div class="col-md-4 col-lg-4">	
	<strong>Photo:</strong>
	<%= @user.photo %>
</div>


<br>
<br>
<div id="user-about-me" class="text-center">
	<h3>About Me</h3>
	<br>	
	<% if @profile%>
		<h5>Location</h5><%= @profile.location %><br><br>
		<h5>Objective</h5><%= @profile.objective %><br><br>
		<h5>Summary</h5><%= @profile.summary %><br><br>
	<% else %>
		You dont have a profile
	<% end %>
</div>
<br>

<div id="boots-list-of-jobs" class="text-center ">
	<h5>Current Projects</h5>
		<% @user.projects.each do |project|%>
			<%= link_to "#{project.title}  ||  (#{project.company.name})", project_path(project)%> </li>
		<%end%>
</div>


