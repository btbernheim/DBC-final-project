	<strong>About Me:</strong>
	<ul>
		<li>Location: <%= @profile.location %> </li>
		<li>Objective: <%= @profile.objective %></li>
		<li>Summary: <%= @profile.summary %></li>
	</ul>
<%else%>
	
	<%= link_to "Create 'About Me' Section", new_profile_path %>

<% end %>


	
