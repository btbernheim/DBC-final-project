<h1>Information About <%= @company.name %></h1>

<br>

<div id="company-info-container" class="text-center ">
	<p>Logo
		<% if @company.photo?%>
			<%= image_tag @company.photo.avatar.url %>
		<% else %>
			<div>
				<img src="https://i.ytimg.com/vi/x9Jr9JKpsX8/maxresdefault.jpg" height="70" width="100">
			</div>
		<% end%>
	</p>
	<p><strong>Location</strong><br><small><%= @company.location %></small></p>
	<p><strong>Email</strong> <br><small><%= @company.email %></small></p>
</div>

<br>

<center><h4>Openings</h4></center>

<div id="company-show-job-types">
	<ul>
		<%if @full_time_jobs.any?%>
			<div id="company-show-job-lists" class="col-md-3">
			<strong>Full-Time Positons</strong>
				<ul>
					<% @full_time_jobs.each do |job| %>
						<li><%= link_to job.position, job_path(job) %></li>
					<% end %>
				</ul>
			</div>
		<%end%>
		<%if @part_time_jobs.any?%>
			<div id="company-show-job-lists" class="col-md-3">
			<strong>Part-Time Positons</strong>
				<ul>
					<% @part_time_jobs.each do |job| %>
						<div><li><%= link_to "#{job.position}", job_path(job) %></li></div>
					<% end %>
				</ul>
			</div>
		<% end %>

		<%if @internships.any?%>
			<div id="company-show-job-lists" class="col-md-3">
			<strong>Internship Positons</strong>
				<ul>
					<% @internships.each do |job| %>
						<div><li><%= link_to "#{job.position}", job_path(job) %></li></div>
					<% end %>
				</ul>
			</div>
		<% end %>

		<%if @freelance_jobs.any?%>
			<div id="company-show-job-lists" class="col-md-3">
			<strong>Freelance Positions</strong>
				<ul>
					<% @freelance_jobs.each do |job| %>
						<div><li><%= link_to "#{job.position}", job_path(job) %></li></div>
					<% end %>
				</ul>
			</div>
		<% end %>
	</ul>
</div>
