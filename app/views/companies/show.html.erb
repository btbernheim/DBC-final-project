<h1>Information About <%= @company.name %></h1>

<div>
	<p>Location: <%= @company.location %></p>
	<p>Email: <%= @company.email %></p>
	<p>Logo: 
		<% if @company.photo?%>
			<%= image_tag @company.photo.avatar.url %>
		<% else %>
			<img src="https://i.ytimg.com/vi/x9Jr9JKpsX8/maxresdefault.jpg" height="200" width="400">
		<% end%>		
	</p>
</div>

<h2>Open Job Positons</h2>

<div>
	<ul>
		<% @company.jobs.each do |job| %>
			<li><%= link_to "#{job.position}", job_path(job) %></li>
		<% end %>
	</ul>
</div>

<h2>Open Freelance Positions</h2>

<div>
	<ul>
		<% @freelance_jobs.each do |project| %>
			<li><%= link_to "#{job.project}", project_path(project) %></li>
		<% end %>
	</ul>
</div>